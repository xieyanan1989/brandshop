			#{orderId},
			#{goodsId},
			#{goodsName},
			#{goodsSn},
			#{productId},
			#{number},
			#{marketPrice},
			#{retailPrice},
			#{goodsSpecifitionNameValue},
			#{isReal},
			#{goodsSpecifitionIds},
			#{listPicUrl},
			#{brandId},
			#{shippingStatus},
